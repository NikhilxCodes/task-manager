{
  "info": {
    "name": "Task Manager API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "http://localhost:5050/api/auth/register", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "http://localhost:5050/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "auth", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:5050/api/auth/profile", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "auth", "profile"] }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "http://localhost:5050/api/auth/profile", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "auth", "profile"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:5050/api/tasks?status=All&search=", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "tasks"], "query": [
              { "key": "status", "value": "All" },
              { "key": "search", "value": "" }
            ] }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "http://localhost:5050/api/tasks", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "tasks"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My first task\",\n  \"description\": \"Hello\",\n  \"status\": \"Pending\"\n}"
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "http://localhost:5050/api/tasks/{{taskId}}", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "tasks", "{{taskId}}"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Completed\"\n}"
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:5050/api/tasks/{{taskId}}", "protocol": "http", "host": ["localhost"], "port": "5050", "path": ["api", "tasks", "{{taskId}}"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "taskId", "value": "" }
  ]
}
